<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.Work_outFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:padding="10dp"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WORK OUT"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/marcellus"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_marginLeft="310dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/recent"
            android:id="@+id/log"
            android:layout_gravity="end"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/nam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Exercise Name"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:padding="3dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/marcellus"
        android:background="@drawable/edittext"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diff"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:padding="3dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/marcellus"
        android:background="@drawable/edittext"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Number of times"
        android:drawablePadding="8dp"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Sets"
        android:drawablePadding="8dp"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/rest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Rest Period"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Calories Burned"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Instruction"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/marcellus"
            android:text="Add Photo"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"/>
        <ImageView
            android:id="@+id/add_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:src="@android:drawable/picture_frame"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/tableRow1"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cam"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:background="@drawable/camera" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>

            <ImageView
                android:id="@+id/gal"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/gallery" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnplan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/marcellus"
        android:padding="10dp"
        android:text="ADD WORK OUT"
        android:textColor="@color/white" />
</LinearLayout></ScrollView>