<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".admin.Nutri_planFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:padding="10dp"
        android:id="@+id/toolbar">
        <ImageView
            android:layout_marginLeft="310dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/recent"
            android:id="@+id/log"
            android:layout_gravity="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUTRITION PLANS"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/marcellus"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/p_nam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Plan Name"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:padding="3dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/marcellus"
        android:background="@drawable/edittext"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/bre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Breakfast"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Lunch"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />

    <EditText
        android:id="@+id/dinn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Dinner"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />

    <EditText
        android:id="@+id/snack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Snack"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/water"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Water Consumption"
        android:drawablePadding="8dp"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/macro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Macronutrients"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
    <EditText
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="@font/marcellus"
        android:hint="Description"
        android:drawablePadding="8dp"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marcellus"
                android:text="Add Photo"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/green"/>
            <ImageView
                android:id="@+id/add_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:src="@android:drawable/picture_frame"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/tableRow1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cam"
                    android:layout_width="46dp"
                    android:layout_height="45dp"
                    android:background="@drawable/camera" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"/>

                <ImageView
                    android:id="@+id/gal"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/gallery" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnplan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/marcellus"
            android:padding="10dp"
            android:text="ADD PLAN"
            android:textColor="@color/white" />
</LinearLayout>
</ScrollView>